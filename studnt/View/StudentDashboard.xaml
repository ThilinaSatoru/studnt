<Window x:Class="studnt.View.StudentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:studnt.View"
        mc:Ignorable="d"
        Title="StudentDashboard"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="800" 
        Width="600">
    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Center" Width="463">

            <TextBlock Text="STUDENT DASHBOARD"
                               Foreground="LightGreen"
                               FontWeight="Bold"
                               FontSize="20"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,40,0,0"
                           TextAlignment="Center"
                           />
            <DataGrid Name="StudentGrid" Margin="10 50 10 10" RowBackground="#FFDFDFDF" />

        </StackPanel>
    </Grid>
</Window>
